extends layout

block content
    body(class="bg-slate-900")
        div(class=" mt-10 text-white text-3xl flex justify-center font-bold")
            h3 Log In
        div(class="h-screen flex justify-center")
            div(class="py-6 px-8 h-80 mt-20 bg-slate-600 rounded shadow-xl")
                form(action="" method="POST")
                    div(class="mb-6")
                        label(for="username" class="block text-gray-300 font-bold") Username:
                        input(type="text" name="username" id="username" placeholder="username" class="w-full border border-gray-300 py-2 pl-3 rounded mt-2 outline-none focus:ring-indigo-600 :ring-indigo-600")
                    div()
                        label(for="password" class="block text-gray-300 font-bold") Password:
                        input(type="password" name="password" id="password" placeholder="" class="w-full border border-gray-300 py-2 pl-3 rounded mt-2 outline-none focus:ring-indigo-600 :ring-indigo-600")
                        a(href="#" class="text-sm font-thin text-gray-300 hover:underline mt-2 inline-block hover:text-indigo-300") Forget Password
                    button(type="submit" class="cursor-pointer py-2 px-4 block mt-6 bg-indigo-500 text-white font-bold w-full text-center rounded") Login
